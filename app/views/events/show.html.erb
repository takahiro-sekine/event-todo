<h1 class="mt-3 mb-3">
  <%= @event.title %>
</h1>
<div class="card mb-2">
  <h5 class="card-header">イベント内容</h5>
  <div class="card-body">
    <p class="card-text">
      <%= @event.body %>
    </p>
  </div>
</div>

<div class="card mb-2">
  <h5 class="card-header">期限</h5>
  <div class="card-body">
    <p class="card-text">
      <td>
        <%
        today = Date.today
        diff  = t.limit_date - today
        %>
        <% if    diff.to_i <= 0 %>
        <b class="red-text text-lighten-2"><%= t.limit_date %></b>
        <% elsif diff.to_i <= 3 %>
        <b class="amber-text"><%= t.limit_date %></b>
        <% else %>
        <b><%= t.limit_date %></b>
        <% end %>
      </td>
    </p>
  </div>
</div>

<div class="card mb-2">
  <h5 class="card-header">内容</h5>
  <div class="card-body">
    <p class="card-text">
      <%= @event.body %>
    </p>
  </div>
</div>

<div class="card mb-2">
  <h5 class="card-header">主催者</h5>
  <div class="card-body">
    <p class="card-text">
      <%= @event.user.name  %>
    </p>
  </div>
</div>