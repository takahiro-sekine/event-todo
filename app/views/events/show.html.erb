<h1 class="mt-3 mb-3">
  <%= @event.title %>
</h1>
<div class="card mb-2">
  <h5 class="card-header">イベント内容</h5>
  <div class="card-body">
    <p class="card-text">
      <%= @event.body %>
    </p>
  </div>
</div>

<div class="card mb-2">
  <h5 class="card-header">期限</h5>
  <div class="card-body">
    <p class="card-text">
      <%=@event.limit_date%>
    </p>
  </div>
</div>

<div class="card mb-2">
  <h5 class="card-header">内容</h5>
  <div class="card-body">
    <p class="card-text">
      <%= @event.body %>
    </p>
  </div>
</div>

<div class="card mb-2">
  <h5 class="card-header">主催者</h5>
  <div class="card-body">
    <p class="card-text">
      <%= @event.user.name  %>
    </p>
  </div>
</div>
<% if user_signed_in? && current_user.id == @event.user_id %> 
  <div class="event__manage">
    <%= link_to "編集する", edit_event_path(@event.id), method: :get, class: :event__btn %>
    <%= link_to "削除する", event_path(@event.id), method: :delete, class: :event__btn %>
  </div>      
<% end %> 