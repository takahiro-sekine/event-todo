<% now = Time.zone.now %>
<%= form_with(model: @event, local: true) do |f| %>
  <%# <%=render "/shared/error_messeage"%> 
  <div class="form-group">
    <%= f.label :title, "表題"%><br />
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "内容"%><br />
    <%= f.text_area :body, class:"form-control" , row: 10 %>
  </div>

  <div class="form-inline text-left">
  <div class="form-group">
    <%= f.label :limit_date, "日付", class: 'control-label' %>
    <%= f.date_field :limit_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :limit_date,"時間", class: 'control-label' %>
    <%= f.time_field :limit_date, class: 'form-control' %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>

<% end %>