<div class="form-task">
  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :task_title, "表題"%><br />
    <%= f.text_field :task_title%>
  </div>
  <div class="form-group">
    <%= f.label :task_body, "内容"%><br />
    <%= f.text_area :task_body %>
  </div>
  <div class="form-group">
    <%= f.label :target_at, "日時", class: 'control-label' %><br />
    <%= f.datetime_field :target_at, class: 'form-control' %>
  </div>
    <%= f.submit 'Submit' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', tasks_url %></p>